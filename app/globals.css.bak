/* ═══════════════════════════════════════════════════
   FP INSIGHTS — Terminal Theme
   ═══════════════════════════════════════════════════ */

*, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

:root {
  --bg:       #0a0a0f;
  --bg2:      #0d0d18;
  --bg3:      #111122;
  --green:    #00ff41;
  --gdim:     #00bb30;
  --gbright:  #80ff98;
  --amber:    #ffb700;
  --red:      #ff4455;
  --blue:     #4d9de0;
  --teal:     #56b6c2;
  --purple:   #c678dd;
  --dim:      #222233;
  --dimtxt:   #44445a;
  --border:   #1a1a2e;
  --font:     'Courier New', 'Lucida Console', monospace;
  --sidebar:  260px;
}

html, body { height: 100%; background: var(--bg); color: var(--green); font-family: var(--font); font-size: 14px; line-height: 1.6; overflow: hidden; }

/* Scanlines */
body::after {
  content: ''; position: fixed; inset: 0;
  background: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0,0,0,0.06) 2px, rgba(0,0,0,0.06) 4px);
  pointer-events: none; z-index: 9999;
}

/* ── Cursor ─────────────────────────────────────────── */
.cursor { animation: blink 1s step-end infinite; }
@keyframes blink { 0%,100%{opacity:1} 50%{opacity:0} }

/* ── Boot Screen ────────────────────────────────────── */
#boot-screen {
  position: fixed; inset: 0; background: var(--bg); z-index: 1000;
  display: flex; align-items: center; justify-content: center;
  transition: opacity 0.6s;
}
#boot-screen.out { opacity: 0; pointer-events: none; }
.boot-content { width: 680px; padding: 2rem; }
.ascii-logo {
  color: var(--green); font-size: 10px; line-height: 1.15; margin-bottom: 1.8rem;
  text-shadow: 0 0 12px rgba(0,255,65,0.5);
}
.boot-line { font-size: 13px; margin-bottom: 4px; color: var(--gdim); }
.boot-line.ok  { color: var(--green); }
.boot-line.warn{ color: var(--amber); }
.boot-line.err { color: var(--red); }
.boot-prompt { margin-top: 1.2rem; font-size: 13px; }
.prompt-user  { color: var(--gdim); }
.prompt-sep   { color: var(--dimtxt); }
.prompt-path  { color: var(--blue); }
.prompt-dollar{ color: var(--dimtxt); }

/* ── Layout ─────────────────────────────────────────── */
#app { display: flex; height: 100vh; opacity: 0; transition: opacity 0.4s; }
#app.visible { opacity: 1; }

/* ── Sidebar ────────────────────────────────────────── */
#sidebar {
  width: var(--sidebar); min-width: var(--sidebar); background: var(--bg2);
  border-right: 1px solid var(--border); display: flex; flex-direction: column;
  overflow: hidden;
}
.sidebar-header { padding: 1rem 1.2rem; border-bottom: 1px solid var(--border); }
.sidebar-title  { color: var(--green); font-size: 16px; font-weight: bold; letter-spacing: 1px; }
.sidebar-sub    { color: var(--dimtxt); font-size: 11px; margin-top: 2px; }

#sidebar-nav { flex: 1; overflow-y: auto; padding: 0.5rem 0; }
#sidebar-nav::-webkit-scrollbar { width: 3px; }
#sidebar-nav::-webkit-scrollbar-thumb { background: var(--dim); }

.nav-section {
  padding: 0.7rem 1.2rem 0.3rem; color: var(--dimtxt); font-size: 10px;
  letter-spacing: 2px; text-transform: uppercase;
}
.nav-item {
  display: flex; align-items: center; gap: 0.6rem; padding: 0.45rem 1.2rem;
  cursor: pointer; color: var(--dimtxt); transition: all 0.12s;
  border-left: 2px solid transparent; font-size: 12px;
}
.nav-item:hover  { color: var(--green); background: rgba(0,255,65,0.04); }
.nav-item.active { color: var(--green); border-left-color: var(--green); background: rgba(0,255,65,0.07); }
.nav-item.done   { color: var(--gdim); }
.nav-item.done::after { content: '✓'; margin-left: auto; font-size: 11px; color: var(--gdim); }
.nav-num  { color: var(--dimtxt); font-size: 10px; min-width: 22px; }
.nav-lbl  { flex: 1; }

.sidebar-footer { padding: 1rem 1.2rem; border-top: 1px solid var(--border); }
.prog-label { font-size: 11px; color: var(--dimtxt); margin-bottom: 6px; }
.prog-track { height: 3px; background: var(--dim); border-radius: 2px; overflow: hidden; }
.prog-fill  { height: 100%; background: var(--green); border-radius: 2px; transition: width 0.3s; box-shadow: 0 0 6px var(--green); }

/* ── Main Content ───────────────────────────────────── */
#content { flex: 1; overflow-y: auto; padding: 2.5rem 2.8rem; }
#content::-webkit-scrollbar { width: 5px; }
#content::-webkit-scrollbar-thumb { background: var(--dim); }

/* ── Animations ─────────────────────────────────────── */
@keyframes slidein { from{opacity:0;transform:translateY(12px)} to{opacity:1;transform:translateY(0)} }
.slidein { animation: slidein 0.3s ease-out; }
@keyframes pulse-glow { 0%,100%{box-shadow:0 0 6px rgba(0,255,65,.2)} 50%{box-shadow:0 0 18px rgba(0,255,65,.5)} }

/* ── Home Page ──────────────────────────────────────── */
.home-hero h1 { font-size: 30px; color: var(--green); text-shadow: 0 0 24px rgba(0,255,65,0.3); margin-bottom: 0.4rem; }
.home-hero p  { color: var(--gdim); font-size: 14px; max-width: 580px; line-height: 1.8; margin-bottom: 0.3rem; }
.home-meta    { color: var(--dimtxt); font-size: 12px; margin-bottom: 2rem; }

.concept-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 0.8rem; margin-top: 1.5rem; }
.card {
  background: var(--bg2); border: 1px solid var(--border); padding: 1.1rem;
  cursor: pointer; transition: all 0.18s;
}
.card:hover     { border-color: var(--gdim); box-shadow: 0 0 16px rgba(0,255,65,.06); transform: translateY(-2px); }
.card.done      { border-left: 2px solid var(--gdim); }
.card-num       { color: var(--dimtxt); font-size: 10px; letter-spacing: 2px; margin-bottom: 6px; }
.card-title     { color: var(--amber); font-size: 14px; margin-bottom: 5px; }
.card-desc      { color: var(--dimtxt); font-size: 12px; line-height: 1.5; }
.card-tags      { margin-top: 8px; }
.tag { display: inline-block; border: 1px solid; padding: 1px 6px; font-size: 9px; letter-spacing: 1px; text-transform: uppercase; margin: 2px; }
.tag-g  { color: var(--green);  border-color: var(--gdim); }
.tag-a  { color: var(--amber);  border-color: var(--amber); }
.tag-r  { color: var(--red);    border-color: var(--red); }
.tag-b  { color: var(--blue);   border-color: var(--blue); }
.tag-t  { color: var(--teal);   border-color: var(--teal); }

/* ── Concept Page ───────────────────────────────────── */
.concept-hdr     { margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 1px solid var(--border); }
.concept-num     { color: var(--dimtxt); font-size: 10px; letter-spacing: 3px; text-transform: uppercase; margin-bottom: 4px; }
.concept-title   { color: var(--amber); font-size: 26px; text-shadow: 0 0 20px rgba(255,183,0,.25); margin-bottom: 4px; }
.concept-tagline { color: var(--gdim); font-size: 13px; }

.section       { margin-bottom: 2.5rem; }
.section-lbl   {
  color: var(--dimtxt); font-size: 10px; letter-spacing: 3px; text-transform: uppercase;
  margin-bottom: 0.9rem; display: flex; align-items: center; gap: 0.5rem;
}
.section-lbl::after { content:''; flex:1; height:1px; background:var(--border); }
.prose { color: var(--gdim); line-height: 1.85; max-width: 740px; }
.prose p+p { margin-top: 0.9rem; }
.hi  { color: var(--green); font-weight: bold; }
.ha  { color: var(--amber); }
.hr  { color: var(--red); }
.ht  { color: var(--teal); }
.hb  { color: var(--blue); }

/* ── Code Block ─────────────────────────────────────── */
.code-wrap { background: var(--bg2); border: 1px solid var(--border); max-width: 820px; margin: 1rem 0; overflow: hidden; }
.code-hdr  {
  display: flex; justify-content: space-between; align-items: center;
  padding: 5px 12px; background: rgba(255,255,255,.02); border-bottom: 1px solid var(--border);
  font-size: 11px;
}
.code-lang { color: var(--amber); font-size: 10px; letter-spacing: 1px; text-transform: uppercase; }
.code-file { color: var(--dimtxt); }
.run-btn {
  background: none; border: 1px solid var(--gdim); color: var(--green);
  font-family: var(--font); font-size: 10px; padding: 2px 8px; cursor: pointer; letter-spacing: 1px;
  transition: all 0.12s;
}
.run-btn:hover { background: rgba(0,255,65,.1); box-shadow: 0 0 8px rgba(0,255,65,.2); }
.code-body { padding: 1rem 1.2rem; overflow-x: auto; }
.code-body::-webkit-scrollbar { height: 3px; }
.code-body::-webkit-scrollbar-thumb { background: var(--dim); }
pre { font-family: var(--font); font-size: 12.5px; line-height: 1.65; color: var(--gdim); }
.code-out { border-top: 1px solid var(--border); padding: 8px 12px; background: rgba(0,0,0,.3); font-size: 12px; color: var(--teal); min-height: 28px; }
.code-out.err { color: var(--red); }

/* Syntax tokens */
.kw { color: var(--purple); }
.fn { color: var(--amber); }
.st { color: var(--teal); }
.nm { color: var(--blue); }
.cm { color: #4a4a5e; font-style: italic; }
.tp { color: #e5c07b; }
.op { color: var(--red); }
.ok { color: var(--green); }
.er { color: var(--red); }

/* ── Insight Box ─────────────────────────────────────── */
.insight {
  border-left: 3px solid var(--amber); background: rgba(255,183,0,.04);
  padding: 1rem 1.2rem; margin: 1.4rem 0; max-width: 740px;
}
.insight-lbl { color: var(--amber); font-size: 10px; letter-spacing: 2px; text-transform: uppercase; margin-bottom: 6px; }
.insight p   { color: var(--green); line-height: 1.8; }

/* ── Demo Box ────────────────────────────────────────── */
.demo-box {
  background: var(--bg2); border: 1px solid var(--gdim); max-width: 820px;
  margin: 1rem 0; position: relative; padding: 1.4rem;
}
.demo-box::before {
  content: 'INTERACTIVE'; position: absolute; top: -1px; right: 12px;
  background: var(--gdim); color: var(--bg); font-size: 9px;
  letter-spacing: 2px; padding: 1px 6px;
}
.demo-title { color: var(--amber); font-size: 12px; letter-spacing: 1px; margin-bottom: 1rem; text-transform: uppercase; }

/* ── Buttons ─────────────────────────────────────────── */
.btn {
  display: inline-flex; align-items: center; gap: 5px;
  background: none; border: 1px solid var(--gdim); color: var(--green);
  font-family: var(--font); font-size: 12px; padding: 5px 14px;
  cursor: pointer; transition: all 0.12s; letter-spacing: 1px;
}
.btn:hover       { background: rgba(0,255,65,.08); border-color: var(--green); box-shadow: 0 0 10px rgba(0,255,65,.2); }
.btn:active      { transform: scale(.98); }
.btn.amber       { border-color: var(--amber); color: var(--amber); }
.btn.amber:hover { background: rgba(255,183,0,.08); box-shadow: 0 0 10px rgba(255,183,0,.2); }
.btn.red         { border-color: var(--red); color: var(--red); }
.btn.red:hover   { background: rgba(255,68,85,.08); }
.btn.sm          { font-size: 10px; padding: 3px 8px; }
.btn-row         { display: flex; gap: 10px; flex-wrap: wrap; margin-top: 12px; }

/* ── Compare Grid ────────────────────────────────────── */
.compare { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; max-width: 900px; margin: 1rem 0; }
.cmp-panel { background: var(--bg2); border: 1px solid var(--border); overflow: hidden; }
.cmp-panel.bad  { border-top: 2px solid var(--red); }
.cmp-panel.good { border-top: 2px solid var(--green); }
.cmp-hdr  { padding: 6px 12px; font-size: 10px; letter-spacing: 1px; text-transform: uppercase; background: rgba(255,255,255,.02); }
.cmp-panel.bad  .cmp-hdr { color: var(--red); }
.cmp-panel.good .cmp-hdr { color: var(--green); }
.cmp-body { padding: 1rem; }

/* ── Navigation Footer ───────────────────────────────── */
.concept-nav { display: flex; justify-content: space-between; margin-top: 3rem; padding-top: 1.5rem; border-top: 1px solid var(--border); }
.nav-btn {
  background: none; border: 1px solid var(--border); color: var(--dimtxt);
  font-family: var(--font); padding: 10px 16px; cursor: pointer; transition: all 0.12s;
  display: flex; flex-direction: column; gap: 3px; min-width: 140px;
}
.nav-btn:hover      { border-color: var(--gdim); color: var(--green); }
.nav-btn .dir       { font-size: 9px; letter-spacing: 2px; text-transform: uppercase; }
.nav-btn .nname     { font-size: 12px; }
.nav-btn.right      { text-align: right; }
.nav-btn.mark-done  { border-color: var(--amber); color: var(--amber); }
.nav-btn.mark-done:hover { background: rgba(255,183,0,.08); }

/* ── Table ───────────────────────────────────────────── */
.fp-table { border-collapse: collapse; width: 100%; max-width: 740px; font-size: 12.5px; margin: 1rem 0; }
.fp-table th { text-align: left; color: var(--amber); padding: 6px 12px; border-bottom: 1px solid var(--border); font-size: 10px; letter-spacing: 1px; text-transform: uppercase; }
.fp-table td { padding: 6px 12px; border-bottom: 1px solid var(--border); color: var(--gdim); line-height: 1.6; }
.fp-table tr:hover td { background: rgba(0,255,65,.02); }

/* ══════════════════════════════════════════════════════
   DEMO-SPECIFIC STYLES
   ══════════════════════════════════════════════════════ */

/* ── Substitution Demo ───────────────────────────────── */
.sub-expr {
  font-size: 22px; color: var(--green); background: rgba(0,0,0,.3);
  border: 1px solid var(--border); display: inline-block; padding: 10px 20px; margin: 8px 0;
}
.sub-step  { display: flex; align-items: center; gap: 12px; margin: 6px 0; }
.sub-snum  { color: var(--dimtxt); font-size: 10px; min-width: 60px; text-align: right; }
.sub-sexpr {
  font-size: 15px; color: var(--gdim); padding: 5px 12px;
  border: 1px solid var(--border); background: rgba(0,255,65,.03);
}
.sub-sexpr .changed { color: var(--amber); text-decoration: underline; }
.sub-sexpr.final    { color: var(--teal); border-color: var(--teal); }
.sub-rt-box  { margin-top: 12px; padding: 8px 12px; font-size: 13px; }
.sub-rt-box.pass { color: var(--green); background: rgba(0,255,65,.05); border: 1px solid var(--gdim); }
.sub-rt-box.fail { color: var(--red);   background: rgba(255,68,85,.05); border: 1px solid var(--red); }
#sub-output { margin-top: 10px; }

/* ── Railway Track Demo ──────────────────────────────── */
.railway { overflow-x: auto; padding: 8px 0 4px; }
.rw-steps   { display: flex; align-items: center; gap: 0; margin-bottom: 10px; }
.rw-step    {
  min-width: 140px; border: 1px solid var(--border);
  padding: 10px 12px; background: var(--bg3); cursor: pointer;
  transition: all 0.2s; position: relative;
}
.rw-step.success { border-top: 2px solid var(--green); }
.rw-step.failure { border-top: 2px solid var(--red); opacity: 0.5; }
.rw-step.skipped { border-top: 2px solid var(--dimtxt); opacity: 0.3; }
.rw-step-name    { color: var(--amber); font-size: 11px; margin-bottom: 4px; }
.rw-step-out     { color: var(--gdim); font-size: 11px; min-height: 16px; }
.rw-step.success .rw-step-out { color: var(--green); }
.rw-step.failure .rw-step-out { color: var(--red); }
.rw-arrow   { color: var(--gdim); font-size: 20px; padding: 0 4px; user-select: none; }
.rw-arrow.killed { color: var(--red); }
.rw-toggle  { margin-top: 8px; font-size: 9px; padding: 2px 6px; letter-spacing: 1px; }
.rw-result  {
  padding: 10px 14px; background: rgba(0,0,0,.3); border: 1px solid var(--border);
  font-size: 13px; margin-top: 10px;
}
.rw-result.ok  { color: var(--green); border-left: 3px solid var(--green); }
.rw-result.err { color: var(--red);   border-left: 3px solid var(--red); }
.rw-hint { color: var(--dimtxt); font-size: 11px; margin-bottom: 8px; }

/* ── Lazy Pipeline Demo ──────────────────────────────── */
.pipe-mode-btns { display: flex; gap: 8px; margin-bottom: 14px; }
.pipe-mode-btn  { }
.pipe-mode-btn.active { background: rgba(0,255,65,.1); border-color: var(--green); }
.pipe-grid      { font-size: 11px; margin-bottom: 10px; }
.pipe-row       { display: flex; gap: 3px; margin-bottom: 3px; align-items: center; }
.pipe-lbl       { color: var(--dimtxt); font-size: 10px; min-width: 72px; text-align: right; padding-right: 8px; }
.pipe-cell      {
  width: 42px; height: 28px; display: flex; align-items: center; justify-content: center;
  background: var(--dim); font-size: 11px; color: var(--dimtxt); transition: all 0.3s;
}
.pipe-cell.active    { background: rgba(0,255,65,.2);   color: var(--green);  box-shadow: 0 0 6px rgba(0,255,65,.4); }
.pipe-cell.done      { background: rgba(0,255,65,.08);  color: var(--gdim); }
.pipe-cell.skipped   { background: rgba(255,68,85,.08); color: var(--red);    opacity: 0.6; }
.pipe-cell.emitted   { background: rgba(255,183,0,.2);  color: var(--amber); }
.pipe-cell.unneeded  { background: rgba(255,183,0,.05); color: var(--dimtxt); opacity: 0.3; }
.pipe-stats { margin-top: 10px; font-size: 12px; }
.pipe-stats span { margin-right: 16px; }
.pipe-stats .stat-v { color: var(--amber); }

/* ── PBT Demo ────────────────────────────────────────── */
.pbt-controls { display: flex; align-items: center; gap: 12px; flex-wrap: wrap; margin-bottom: 12px; }
.pbt-toggle-row { display: flex; align-items: center; gap: 8px; font-size: 12px; color: var(--dimtxt); cursor: pointer; }
.toggle {
  width: 34px; height: 18px; background: var(--dim); border-radius: 9px;
  position: relative; cursor: pointer; transition: background 0.2s;
}
.toggle.on { background: var(--red); }
.toggle::after {
  content: ''; position: absolute; width: 12px; height: 12px;
  background: #ccc; border-radius: 50%; top: 3px; left: 3px; transition: transform 0.2s;
}
.toggle.on::after { transform: translateX(16px); background: white; }
.pbt-console {
  background: var(--bg); border: 1px solid var(--border); height: 220px;
  overflow-y: auto; padding: 10px 12px; font-size: 11.5px;
}
.pbt-console::-webkit-scrollbar { width: 3px; }
.pbt-console::-webkit-scrollbar-thumb { background: var(--dim); }
.pbt-line { line-height: 1.7; }
.pbt-line.pass    { color: var(--gdim); }
.pbt-line.fail    { color: var(--red); font-weight: bold; }
.pbt-line.info    { color: var(--dimtxt); }
.pbt-line.summary { color: var(--amber); margin-top: 5px; }
.pbt-line.ok-sum  { color: var(--green); margin-top: 5px; }
.pbt-running { color: var(--amber); font-size: 11px; margin-top: 6px; height: 16px; }

/* ── Monad Chain Demo ────────────────────────────────── */
.chain-wrapper { overflow-x: auto; padding: 4px 0; }
.chain-steps   { display: flex; align-items: stretch; margin-bottom: 12px; }
.ch-step {
  min-width: 160px; border: 1px solid var(--border); background: var(--bg3);
  padding: 12px; transition: all 0.2s; position: relative;
}
.ch-step.some { border-top: 2px solid var(--green); }
.ch-step.none { border-top: 2px solid var(--red); opacity: 0.5; }
.ch-step.skip { border-top: 2px solid var(--dimtxt); opacity: 0.25; }
.ch-arrow { display: flex; align-items: center; padding: 0 4px; color: var(--gdim); font-size: 18px; }
.ch-arrow.dead { color: var(--red); }
.ch-step-name { color: var(--amber); font-size: 11px; margin-bottom: 5px; }
.ch-step-val  { font-size: 11px; min-height: 14px; }
.ch-step.some .ch-step-val { color: var(--green); }
.ch-step.none .ch-step-val { color: var(--red); }
.ch-step.skip .ch-step-val { color: var(--dimtxt); }
.ch-toggle-btn { margin-top: 8px; font-size: 9px; padding: 2px 6px; }
.ch-result { padding: 10px 14px; font-size: 13px; margin-top: 8px; border: 1px solid var(--border); }
.ch-result.some { color: var(--green); border-left: 3px solid var(--green); background: rgba(0,255,65,.04); }
.ch-result.none { color: var(--red);   border-left: 3px solid var(--red);   background: rgba(255,68,85,.04); }
.ch-hint { color: var(--dimtxt); font-size: 11px; margin-bottom: 8px; }

/* ── Monoid Parallel Demo ────────────────────────────── */
.monoid-mode-btns { display: flex; gap: 8px; margin-bottom: 14px; }
.monoid-viz   { font-size: 12px; }
.mono-row     { display: flex; gap: 4px; margin-bottom: 6px; align-items: center; flex-wrap: wrap; }
.mono-lbl     { color: var(--dimtxt); font-size: 10px; min-width: 100px; }
.mono-cell    { width: 38px; height: 28px; display: flex; align-items: center; justify-content: center; background: var(--dim); color: var(--dimtxt); transition: all 0.3s; font-size: 11px; }
.mono-cell.active   { background: rgba(0,255,65,.2); color: var(--green); box-shadow: 0 0 6px rgba(0,255,65,.3); }
.mono-cell.combined { background: rgba(255,183,0,.2); color: var(--amber); box-shadow: 0 0 6px rgba(255,183,0,.3); }
.mono-cell.final    { background: rgba(86,182,194,.2); color: var(--teal); box-shadow: 0 0 10px rgba(86,182,194,.4); }
.mono-op      { color: var(--dimtxt); padding: 0 2px; }
.mono-result  { margin-top: 12px; padding: 10px; background: rgba(0,0,0,.3); border: 1px solid var(--border); font-size: 13px; }
.mono-rounds  { color: var(--dimtxt); font-size: 11px; margin-top: 4px; }
.mono-rounds .rv { color: var(--amber); }

/* ── State Stepper Demo ──────────────────────────────── */
.state-diagram { max-width: 700px; }
.state-fn-row  { display: flex; gap: 8px; margin-bottom: 8px; align-items: stretch; flex-wrap: wrap; }
.state-fn-box  { background: var(--bg3); border: 1px solid var(--border); padding: 12px; min-width: 180px; flex: 1; }
.state-fn-box.active { border-color: var(--green); background: rgba(0,255,65,.04); }
.sfn-name      { color: var(--amber); font-size: 12px; margin-bottom: 6px; }
.sfn-sig       { color: var(--dimtxt); font-size: 10px; margin-bottom: 6px; font-style: italic; }
.sfn-in        { color: var(--gdim); font-size: 11px; }
.sfn-out       { color: var(--green); font-size: 11px; margin-top: 4px; }
.sfn-state     { color: var(--blue); font-size: 10px; margin-top: 4px; }
.state-result  { padding: 10px; background: rgba(0,0,0,.3); border: 1px solid var(--border); font-size: 12px; }
.state-row     { display: flex; gap: 16px; margin: 3px 0; }
.state-k       { color: var(--dimtxt); min-width: 80px; }
.state-v       { color: var(--teal); }

/* ── Applicative Demo ────────────────────────────────── */
.ap-mode-btns { display: flex; gap: 8px; margin-bottom: 14px; }
.ap-steps     { display: flex; flex-direction: column; gap: 6px; margin-bottom: 12px; }
.ap-step      { display: flex; align-items: center; gap: 10px; }
.ap-step-box  {
  flex: 1; max-width: 300px; padding: 10px 12px; border: 1px solid var(--border);
  background: var(--bg3); font-size: 12px; cursor: pointer; transition: all 0.2s;
}
.ap-step-box.pass { border-left: 3px solid var(--green); color: var(--green); }
.ap-step-box.fail { border-left: 3px solid var(--red);   color: var(--red); }
.ap-step-lbl  { color: var(--dimtxt); font-size: 11px; min-width: 120px; }
.ap-result    { padding: 10px; border: 1px solid var(--border); background: rgba(0,0,0,.3); font-size: 13px; }
.ap-result.all-ok   { color: var(--green); border-left: 3px solid var(--green); }
.ap-result.monad-err{ color: var(--red);   border-left: 3px solid var(--red); }
.ap-result.ap-err   { color: var(--amber); border-left: 3px solid var(--amber); }
.ap-mode-label { color: var(--dimtxt); font-size: 11px; margin-top: 6px; }

/* ── Quiz ────────────────────────────────────────────── */
.quiz { background: var(--bg2); border: 1px solid var(--border); padding: 1.4rem; max-width: 740px; margin: 1rem 0; }
.quiz-q  { color: var(--green); font-size: 14px; margin-bottom: 12px; line-height: 1.7; }
.quiz-opts { display: flex; flex-direction: column; gap: 7px; }
.quiz-opt {
  background: rgba(0,0,0,.3); border: 1px solid var(--border); padding: 8px 14px;
  cursor: pointer; color: var(--dimtxt); font-family: var(--font); font-size: 13px;
  text-align: left; transition: all 0.12s;
}
.quiz-opt:hover   { border-color: var(--gdim); color: var(--gdim); }
.quiz-opt.correct { border-color: var(--green); color: var(--green); background: rgba(0,255,65,.05); }
.quiz-opt.wrong   { border-color: var(--red);   color: var(--red);   background: rgba(255,68,85,.05); }
.quiz-feedback    { margin-top: 12px; padding: 10px; font-size: 13px; line-height: 1.7; }
.quiz-feedback.pass { color: var(--green); background: rgba(0,255,65,.04); border: 1px solid var(--gdim); }
.quiz-feedback.fail { color: var(--gdim);  background: rgba(0,0,0,.2);     border: 1px solid var(--border); }

/* ── Plain English Box ───────────────────────────────── */
.plain-box {
  border: 1px solid var(--green); background: rgba(0,255,65,.04);
  padding: 1.2rem 1.4rem; margin-bottom: 2rem; max-width: 740px;
}
.plain-label {
  color: var(--green); font-size: 10px; letter-spacing: 3px;
  text-transform: uppercase; margin-bottom: 8px;
}
.plain-label::before { content: '▶  '; }
.plain-text { color: var(--gbright); font-size: 15px; line-height: 1.9; }
.plain-text strong { color: var(--green); }

/* ── Analogy Box ─────────────────────────────────────── */
.analogy-box {
  border-left: 3px solid var(--teal); background: rgba(86,182,194,.04);
  padding: 1rem 1.2rem; margin: 1.2rem 0; max-width: 740px;
}
.analogy-label { color: var(--teal); font-size: 10px; letter-spacing: 2px; text-transform: uppercase; margin-bottom: 6px; }
.analogy-text  { color: var(--gdim); line-height: 1.8; font-size: 13px; }
.analogy-text strong { color: var(--teal); }

/* ── Already Know Box ────────────────────────────────── */
.know-box {
  background: var(--bg2); border: 1px solid var(--border);
  padding: 1rem 1.2rem; margin: 1.2rem 0; max-width: 740px;
}
.know-label { color: var(--amber); font-size: 10px; letter-spacing: 2px; text-transform: uppercase; margin-bottom: 10px; }
.know-items { display: flex; flex-wrap: wrap; gap: 8px; }
.know-item  { background: rgba(255,183,0,.06); border: 1px solid rgba(255,183,0,.2); padding: 5px 12px; font-size: 12px; color: var(--amber); }

/* ── Apply When ──────────────────────────────────────── */
.apply-box { max-width: 740px; margin: 1.2rem 0; }
.apply-label { color: var(--green); font-size: 10px; letter-spacing: 2px; text-transform: uppercase; margin-bottom: 10px; }
.apply-item { display: flex; gap: 10px; padding: 7px 0; border-bottom: 1px solid var(--border); font-size: 13px; color: var(--gdim); line-height: 1.6; }
.apply-item:last-child { border-bottom: none; }
.apply-item::before { content: '→'; color: var(--gdim); min-width: 16px; flex-shrink: 0; margin-top: 2px; }

/* ── Jargon Tooltip ──────────────────────────────────── */
.jargon {
  color: var(--amber); border-bottom: 1px dotted var(--amber);
  cursor: help; position: relative; display: inline;
}
.jargon .tip {
  display: none; position: absolute; bottom: 130%; left: 0;
  background: var(--bg3); border: 1px solid var(--amber); padding: 8px 12px;
  font-size: 11px; color: var(--gdim); z-index: 200;
  width: 280px; white-space: normal; line-height: 1.6;
  box-shadow: 0 4px 20px rgba(0,0,0,.5);
}
.jargon:hover .tip { display: block; }

/* ── Understanding Tip ───────────────────────────────── */
.utip {
  background: rgba(255,183,0,.03); border: 1px dashed rgba(255,183,0,.25);
  padding: 10px 14px; margin: 12px 0; max-width: 740px;
}
.utip-label { color: var(--amber); font-size: 10px; letter-spacing: 2px; text-transform: uppercase; margin-bottom: 6px; }
.utip p { color: var(--gdim); line-height: 1.7; font-size: 13px; }
.utip p strong { color: var(--amber); }

/* ── Glossary Drawer ─────────────────────────────────── */
#glossary-btn {
  position: fixed; bottom: 20px; right: 20px; z-index: 500;
  background: var(--bg2); border: 1px solid var(--amber); color: var(--amber);
  font-family: var(--font); font-size: 11px; padding: 7px 16px; cursor: pointer;
  letter-spacing: 1px;
}
#glossary-btn:hover { background: rgba(255,183,0,.1); }
#glossary-drawer {
  position: fixed; right: 0; top: 0; bottom: 0; width: 340px; z-index: 600;
  background: var(--bg2); border-left: 1px solid var(--border);
  transform: translateX(100%); transition: transform 0.25s; display: flex; flex-direction: column;
}
#glossary-drawer.open { transform: translateX(0); }
.glossary-hdr {
  padding: 1rem; border-bottom: 1px solid var(--border);
  display: flex; justify-content: space-between; align-items: center;
}
.glossary-hdr h3 { color: var(--amber); font-size: 13px; letter-spacing: 1px; }
.glossary-close { background: none; border: none; color: var(--dimtxt); font-size: 20px; cursor: pointer; font-family: var(--font); }
.glossary-close:hover { color: var(--red); }
.glossary-body { flex: 1; overflow-y: auto; padding: 1rem; }
.glossary-body::-webkit-scrollbar { width: 3px; }
.glossary-body::-webkit-scrollbar-thumb { background: var(--dim); }
.g-term { margin-bottom: 1.2rem; padding-bottom: 1.2rem; border-bottom: 1px solid var(--border); }
.g-term:last-child { border-bottom: none; }
.g-name  { color: var(--amber); font-size: 13px; margin-bottom: 5px; }
.g-plain { color: var(--green); font-size: 12px; margin-bottom: 4px; line-height: 1.6; }
.g-code  { color: var(--dimtxt); font-size: 11px; font-style: italic; line-height: 1.5; margin-top: 3px; }

/* ── Responsive ──────────────────────────────────────── */
@media (max-width: 720px) {
  #sidebar { display: none; }
  #content { padding: 1.5rem; }
  .compare  { grid-template-columns: 1fr; }
}
